<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Initialize dropdown functionality
        const dropdowns = document.querySelectorAll('.option-remark-dropdown');

        dropdowns.forEach(dropdown => {
            dropdown.addEventListener('change', function () {
                const cardId = this.getAttribute('data-card');
                const selectedValue = this.value;
                const textarea = document.getElementById(`other-reason-${cardId}`);

                if (textarea) {
                    if (selectedValue === 'Other') {
                        textarea.disabled = false;
                        textarea.placeholder = "Enter specific reason...";
                        textarea.focus();
                    } else {
                        textarea.disabled = true;
                        textarea.value = '';
                        textarea.placeholder = "Enter details (enabled when 'Other' is selected)...";
                    }
                }
            });

            // Set initial state
            const cardId = dropdown.getAttribute('data-card');
            const selectedValue = dropdown.value;
            const textarea = document.getElementById(`other-reason-${cardId}`);

            if (selectedValue === 'Other' && textarea) {
                textarea.disabled = false;
            }
        });

        // Auto-resize textareas
        document.querySelectorAll('.other-reason-textarea').forEach(textarea => {
            textarea.addEventListener('input', function () {
                this.style.height = 'auto';
                this.style.height = Math.min(this.scrollHeight, 80) + 'px';
            });
        });

        // Submit functionality
        document.getElementById('submit-all-data').addEventListener('click', function () {
            const cardsData = [];

            document.querySelectorAll('.warehouse-card').forEach((card, index) => {
                const cardId = index + 1;
                const data = {
                    itemId: card.querySelector('.card-header h3').textContent.trim(),
                    barcode: card.querySelector('.barcode').textContent.trim(),
                    product: card.querySelectorAll('.product-item')[1].querySelector('.product-value').textContent.trim(),
                    quantity: card.querySelectorAll('.quantity-item')[0].querySelector('.quantity-value').textContent.trim(),
                    availableQty: card.querySelectorAll('.quantity-item')[1].querySelector('.quantity-value').textContent.trim(),
                    remark: card.querySelector('.line-remark').textContent.trim(),
                    statusNote: card.querySelector('.option-remark-dropdown').value,
                    otherReason: document.getElementById(`other-reason-${cardId}`)?.value || '',
                    docNumber: card.querySelector('.doc-value').textContent.trim()
                };

                cardsData.push(data);
            });

            console.log('📦 Collected Data:', cardsData);

            // Show success message
            Swal.fire({
                title: '✅ Success!',
                text: `${cardsData.length} inventory items submitted`,
                icon: 'success',
                confirmButtonColor: '#2c3e50',
                confirmButtonText: 'OK',
                timer: 2000
            });
        });

        // Add card hover effects
        document.querySelectorAll('.warehouse-card').forEach(card => {
            card.addEventListener('mouseenter', function () {
                this.style.zIndex = '10';
            });

            card.addEventListener('mouseleave', function () {
                this.style.zIndex = '1';
            });
        });
    });
</script>