    .page-header {
        text-align: center;
        margin-bottom: 25px;
        padding: 20px;
        background: white;
        border-radius: var(--card-radius);
        box-shadow: var(--card-shadow);
        border-bottom: 3px solid var(--primary-color);
        position: relative;
    }

    .page-header h1 {
        color: var(--primary-color);
        font-weight: 700;
        margin-bottom: 5px;
        font-size: 22px;
        letter-spacing: -0.3px;
    }

    .page-header p {
        color: #7f8c8d;
        font-size: 14px;
        margin-bottom: 0;
        font-weight: 500;
    }

    .warehouse-card {
        background: white;
        border-radius: var(--card-radius);
        box-shadow: var(--card-shadow);
        margin-bottom: 20px;
        overflow: hidden;
        transition: all 0.25s ease;
        height: 100%;
        border: 1px solid #dfe6e9;
        position: relative;
    }

    .warehouse-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
        border-color: var(--accent-color);
    }

    .card-header {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        padding: 15px 18px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: relative;
    }

    .card-header h3 {
        font-size: 16px;
        font-weight: 700;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-header .card-icon {
        font-size: 20px;
        color: rgba(255, 255, 255, 0.9);
        background: rgba(255, 255, 255, 0.15);
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card-body {
        padding: 18px;
    }

    /* Compact Product Grid */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
        margin-bottom: 15px;
    }

    .product-item {
        background: #f8f9fa;
        border-radius: 8px;
        padding: 12px 10px;
        border: 1px solid #e9ecef;
    }

    .product-label {
        font-size: 11px;
        font-weight: 600;
        color: var(--secondary-color);
        text-transform: uppercase;
        letter-spacing: 0.3px;
        margin-bottom: 4px;
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .product-value {
        font-size: 14px;
        font-weight: 600;
        color: var(--primary-color);
        line-height: 1.3;
    }

    /* Compact Quantity Display */
    .quantity-display {
        display: flex;
        gap: 10px;
        margin-bottom: 15px;
    }

    .quantity-item {
        flex: 1;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 8px;
        padding: 12px 10px;
        text-align: center;
        border: 1px solid #dee2e6;
        position: relative;
    }

    .quantity-label {
        font-size: 11px;
        font-weight: 600;
        color: var(--secondary-color);
        margin-bottom: 5px;
    }

    .quantity-value {
        font-size: 20px;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 2px;
    }

    .quantity-subtext {
        font-size: 10px;
        color: #6c757d;
        background: rgba(52, 58, 64, 0.08);
        padding: 2px 6px;
        border-radius: 10px;
        display: inline-block;
    }

    /* Status Badge */
