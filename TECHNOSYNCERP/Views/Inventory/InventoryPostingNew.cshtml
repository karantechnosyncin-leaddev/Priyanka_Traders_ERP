    .inventory-card {
        width: 100%;
        max-width: 350px;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .inventory-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.12);
        }

    .card-header {
        background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%);
        color: white;
        padding: 18px 20px;
        text-align: center;
    }

        .card-header h2 {
            font-size: 1.4rem;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .card-header p {
            opacity: 0.85;
            font-size: 0.9rem;
            margin-top: 4px;
        }

    .inventory-image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        position: relative;
    }

    .inventory-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .inventory-card:hover .inventory-image {
        transform: scale(1.05);
    }

    .inventory-details {
        padding: 24px 20px;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 16px;
        padding-bottom: 16px;
        border-bottom: 1px solid #f0f0f0;
    }

        .detail-row:last-of-type {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

    .detail-label {
        font-size: 0.85rem;
        color: #666;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .detail-label i {
            width: 18px;
            color: #4b6cb7;
        }

    .detail-value {
        font-size: 1rem;
        font-weight: 600;
        color: #333;
        text-align: right;
        max-width: 60%;
        word-break: break-word;
    }

    .quantity-display {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .quantity-value {
        font-size: 1.2rem;
        font-weight: 700;
        color: #2c5aa0;
    }

    .quantity-status {
        font-size: 0.75rem;
        font-weight: 600;
        padding: 4px 10px;
        border-radius: 20px;
    }

    .status-in-stock {
        background-color: rgba(46, 204, 113, 0.15);
        color: #27ae60;
    }

    .status-low-stock {
        background-color: rgba(241, 196, 15, 0.15);
        color: #d35400;
    }

    .card-footer {
        padding: 0 20px 24px 20px;
    }

    .submit-btn {
        width: 100%;
        padding: 14px;
        background: linear-gradient(to right, #4b6cb7, #2c5aa0);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 10px;
    }

        .submit-btn:hover {
            background: linear-gradient(to right, #3a5ca9, #1f4785);
            box-shadow: 0 5px 15px rgba(43, 108, 176, 0.25);
        }

        .submit-btn:active {
            transform: scale(0.98);
        }

    .card-id {
        text-align: center;
        font-size: 0.75rem;
        color: #888;
        margin-top: 15px;
        letter-spacing: 0.3px;
    }

    /* Responsive adjustments */
    @@media (max-width: 400px) {
        .inventory-card {
            max-width: 100%;
        }

        .inventory-details {
            padding: 20px 16px;
        }

        .card-footer {
            padding: 0 16px 20px 16px;
        }
    }
</style>
<div class="container-fluid">
    <div class="row mt-2">
        <div class="col-12">
            <div class="card p-2 rounded shadow-sm">
                <div class="row">
                    <div class="col-md-6 d-flex align-items-center">
                        <h3 id="doctitle"><b>Inventory Posting New</b></h3>
                    </div>
                    <div class="col-md-6 d-flex justify-content-end align-items-center flex-wrap">
