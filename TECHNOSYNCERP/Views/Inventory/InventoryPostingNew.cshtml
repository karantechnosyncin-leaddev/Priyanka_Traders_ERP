                                            break;
                                        case "Attachments":
                                            <button id="Attachments" data-bs-toggle="modal" data-bs-target="#Attachment" class="btn @ColorClass mb-1   me-2 mb-1">
                                                <i class="@icon"></i> @btnName
                                            </button>
                                            break;
                                        case "Export":
                                            <button id="btnPdf" class="btn btn-outline-danger me-2 mb-1">
                                                <i class="bi bi-file-pdf me-1"></i> PDF
                                            </button>
                                            <button id="btnExcel" class="btn btn-outline-success me-2 mb-1">
                                                <i class="bi bi-file-earmark-excel me-1"></i> EXCEL
                                            </button>
                                            <button id="btnCSV" class="btn btn-outline-success me-2 mb-1">
                                                <i class="bi bi-file-earmark-excel me-1"></i> CSV
                                            </button>
                                            break;
                                        case "Copy From":
                                            <div class="dropdown">
                                                <button id="btnCopyFrom" class="btn @ColorClass mb-1  dropdown-toggle me-2 mb-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    <i class="@icon"></i> @btnName
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li class='copyfrombtn' data-flag="IIC" data-bs-toggle="modal"><a class="dropdown-item" href="#">Inventory Counting</a></li>
                                                </ul>
                                            </div>
                                            break;
                                        @*case "Copy To":
                                            <button id="btnCopyFrom" class="btn @ColorClass mb-1  me-2 mb-1">
                                                <i class="@icon"></i> @btnName
                                            </button>
                                            break;*@
                                        default:

                                            break;
                                    }
                                }
                            }
                        }
                        else
                        {
                            <div class="alert alert-primary" role="alert">

                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="inventory-card">
    <div class="card-header">
        <h2>Inventory Item</h2>
    </div>

    <div class="inventory-image-container">
        <img src="https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=800&q=80" alt="Inventory Item" class="inventory-image">
    </div>

    <div class="inventory-details">
        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-barcode"></i>
                Item Code
            </div>
            <div class="detail-value">INV-2023-0567</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-cube"></i>
                Item Name
            </div>
            <div class="detail-value">Wireless Bluetooth Headphones</div>
        </div>

        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-boxes"></i>
                Quantity
            </div>
            <div class="quantity-display">
                <input type="number" class="form-control" />
                
            </div>
        </div>

        <div class="detail-row">
            <div class="detail-label">
                <i class="fas fa-warehouse"></i>
                Warehouse Code
            </div>
            <div class="detail-value">Central Distribution Center</div>
        </div>
    </div>

    <div class="card-footer">
        <button class="submit-btn" id="submitBtn">
            <i class="fas fa-check-circle"></i>
            Update Inventory Count
        </button>
        
    </div>
</div>



<script>
    // Handle submit button click
    document.getElementById('submitBtn').addEventListener('click', function () {
        // Add click effect
        this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
        this.disabled = true;

        // Simulate API call
        setTimeout(() => {
            alert('Inventory count submitted successfully!');
            this.innerHTML = '<i class="fas fa-check-circle"></i> Update Inventory Count';
            this.disabled = false;

            // For demo purposes, update the quantity with a random value
            const quantityValue = document.querySelector('.quantity-value');
            const randomChange = Math.floor(Math.random() * 20) - 10;
            const currentQty = parseInt(quantityValue.textContent);
            const newQty = Math.max(0, currentQty + randomChange);

            quantityValue.textContent = newQty + ' Units';

            // Update status based on new quantity
            const statusElement = document.querySelector('.quantity-status');
            if (newQty > 50) {
                statusElement.textContent = 'In Stock';
               
            } else if (newQty > 10) {
                statusElement.textContent = 'Low Stock';
                
            } else {
                statusElement.textContent = 'Critical';
                
            }
        }, 1500);
    });

    // Change image on hover for demo purposes
    const imageContainer = document.querySelector('.inventory-image-container');
    const images = [
        'https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
        'https://images.unsplash.com/photo-1583394838336-acd977736f90?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
        'https://images.unsplash.com/photo-1546868871-7041f2a55e12?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
    ];

    let currentImageIndex = 0;

    imageContainer.addEventListener('click', function () {
        currentImageIndex = (currentImageIndex + 1) % images.length;
        this.querySelector('.inventory-image').src = images[currentImageIndex];
    });
</script>