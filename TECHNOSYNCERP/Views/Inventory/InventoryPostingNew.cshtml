                                <div class="col-md-6"hidden>
                                    <label class="form-label">EmployeeID</label>
                                    <input type="text" class="form-control EmployeeID">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Warehouse Code</label>
                                    <input type="text" class="form-control WhsCode">
                                </div>

                                <div class="col-md-6" hidden>
                                    <label class="form-label">Warehouse ID</label>
                                    <input type="number" class="form-control WhsID">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Stock In Warehouse</label>
                                    <input type="number" class="form-control StockInWhs">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Account Code</label>
                                    <input type="number" class="form-control AcctCode">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Remarks</label>
                                    <input type="text" class="form-control Remarks">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Base Line</label>
                                    <input type="number" class="form-control BaseLine">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Base Object</label>
                                    <input type="text" class="form-control BaseObj" value="IICN">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Base Doc Entry</label>
                                    <input type="number" class="form-control BaseDocEntry">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Price</label>
                                    <input type="number" step="0.01" class="form-control Price">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Weight</label>
                                    <input type="number" step="0.01" class="form-control Weight">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-actions">
                        <button class="action-btn primary" id="confirm-btn">
                            <i class="fas fa-check-circle"></i>
                            Confirm Count
                        </button>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="last-counted" id="last-counted-text">
                        <i class="far fa-clock"></i>
                        Ready to count
                    </div>
                </div>
            </div>
        </div>
    </div>

   

    <!-- Bootstrap 5 JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>

    <script>
        $(document).ready(function () {
            // Global variables
            var countingData = [];
            var currentIndex = 0;
            var processedItems = [];
            var totalItemCount = 0;   // ✅ ADD THIS
            var stockTakerName = "";


            // Set current date
            $('.datepicker').val(new Date().toISOString().split('T')[0]);

            //timepicker
            setCurrentTime();
            function setCurrentTime() {
                let now = new Date();
                let hours = String(now.getHours()).padStart(2, '0');
                let minutes = String(now.getMinutes()).padStart(2, '0');
                let currentTime = hours + ":" + minutes;

                $('.timepicker').val(currentTime);
            }

            // Load Financial Year
            loadFiscalYears();

            function loadFiscalYears() {
                $.ajax({
                    url: '@Url.Action("GETOPENFYEAR", "Inventory")',
                    method: 'GET',
                    success: function(response) {
                        const select = $('#FYearId');
                        select.empty();
                        response.forEach(function(year) {
                            select.append(`<option value="${year.FYearId}">${year.FYear}</option>`);
                        });
                        loadDocNum($("#FYearId").val());
                    },
                    error: function(xhr) {
                        console.error('Error loading fiscal years:', xhr.responseText);
                    }
                });
            }

            $("#FYearId").change(function () {
                loadDocNum($(this).val());
            });

            function loadDocNum(id) {
                $.ajax({
                    url: '@Url.Action("GETINVPOSTINGDOCNUMNEW", "Inventory")',
                    method: 'GET',
                    data: {id: id},
                    success: function(response) {
                        if(response[0].Success == "true") {
                            $("#Docnum").val(response[0].Message);
                        } else {
                            console.error('Error loading document number:', response[0].Message);
                        }
                    },
                    error: function(xhr) {
                        console.error('Error loading document number:', xhr.responseText);
                    }
                });
            }

            // Load inventory data
            loadInventoryPostingRows();

            function loadInventoryPostingRows() {
                $.ajax({
                    url: '@Url.Action("GETROWDATAINVENTORYPOSTINGNEW", "Inventory")',
                    type: 'GET',
                    success: function (response) {
                        console.log(response);

                        if (!response || response.length === 0) {
                            console.log('No data found');
                            showCompletionCard();
                            return;
                        }

                        countingData = response;
                        totalItemCount = response.length;   // ✅ ADD THIS
                        currentIndex = 0;
                        loadCard(currentIndex);
                    },
                    error: function (xhr) {
                        console.error('Error loading inventory data:', xhr.responseText);
                    }
                });
            }

            function loadCard(index) {
                if (index < 0 || index >= countingData.length) {
                    showCompletionCard();
                    return;
                }

                const row = countingData[index];

                // Store stock taker name from first item (assuming all items have same stock taker)
                if (index === 0 && row.StockTakerName) {
                    stockTakerName = row.StockTakerName;
                    $('#StockTakerInput').val(stockTakerName);
                }

                // Update display fields
                $('.ItemCodeDisplay').text(row.ItemCode || 'N/A');
                $('.ItemNameDisplay').text(row.ItemName || 'N/A');
                $('.WhsCodeDisplay').text(row.WhsCode || 'N/A');
                $('.StockInWhsDisplay').text(row.StockInWhs || 0);
                $('#system-qty-display').text(`System: ${row.StockInWhs || 0}`);

                // Update input fields
                $('.ID').val(row.ID || '');
                $('.DocEntry').val(row.DocEntry || '');
                $('.Status').val('C');
                $('.LineNum').val(row.LineNum || 0);
                $('.ItemID').val(row.ItemID || '');
                $('.EanCode').val(row.EanCode || '');
                $('.ItemCode').val(row.ItemCode || '');
                $('.ItemName').val(row.ItemName || '');
                $('.LogEmployes').val(row.StockTakerName || '');
                $('.EmployeeID').val(row.EmployeeID || '');
                $('.WhsCode').val(row.WhsCode || '');
                $('.WhsID').val(row.WhsID || '');
                $('.StockInWhs').val(row.StockInWhs || 0);
                $('.AcctCode').val(row.AcctCode || '');
                $('.Remarks').val(row.Remarks || '');
                $('.BaseLine').val(row.BaseLine || 0);
                $('.BaseObj').val('IICN');
                $('.BaseDocEntry').val(row.DocEntry || 0);
                $('.Price').val(row.Price || 0);
                $('.Weight').val(row.Weight || 0);
                $('.qty-value').val(row.CountedQty || 0);

                // Update counter display
                $('#last-counted-text').html(`
                    <i class="far fa-clock"></i>
                    Item ${currentIndex + 1} of ${countingData.length}
                `);
            }

            // Quantity controls
            $('.plus-btn').on('click', function () {
                let val = parseInt($('.qty-value').val()) || 0;
                $('.qty-value').val(val + 1);
            });

            $('.minus-btn').on('click', function () {
                let val = parseInt($('.qty-value').val()) || 0;
                if (val > 0) {
                    $('.qty-value').val(val - 1);
                }
            });

            $('.qty-value').on('click', function () {
                $(this).select();
            });

            // Confirm button with animation
                $('#confirm-btn').on('click', function () {

                    const $btn = $(this);
                    $btn.prop('disabled', true).text('Processing...');

                    const payload = {
                        header: getHeaderData(),
                        lines: [getLineItems()] || []   // ✅ FIX: never null
                    };
                    console.log(payload)
                    if (!payload.header || payload.lines.length === 0) {
                        alert('Header or line items missing');
                        $btn.prop('disabled', false).text('Confirm');
                        return;
                    }
                    $.ajax({
                        url: '@Url.Action("CREATEINVENTORYPOSTINGNEW", "Inventory")',
                        type: 'POST',
                        contentType: 'application/json; charset=utf-8',
                        dataType: 'json',
                        data: JSON.stringify(payload),
                        success: function (response) {
                            if (response && response.success === true) {
                                showSuccessMessage('Item saved successfully');
                                removeSavedItem();   // ✅ ONLY this
                            } else {
                                alert(response?.Message || 'Save failed');
                            }
                            $btn.prop('disabled', false).text('Confirm');
                        },

                        error: function (xhr) {
                            console.error('Error saving item:', xhr.responseText);
                            alert(xhr.responseText || 'Server error');
                            $btn.prop('disabled', false).text('Confirm'); // ✅ FIX
                        }
                    });
                });
            function removeSavedItem() {
                const $card = $('#inventory-card');

                $card.addClass('slide-out-left');

                setTimeout(() => {
                    processedItems.push(countingData[currentIndex]);
                    countingData.splice(currentIndex, 1);

                    if (countingData.length > 0) {
                        if (currentIndex >= countingData.length) {
                            currentIndex = countingData.length - 1;
                        }
                        loadCard(currentIndex);
                        $card.removeClass('slide-out-left').addClass('slide-in-right');

                        setTimeout(() => {
                            $card.removeClass('slide-in-right');
                        }, 400);
                    } else {
                        showCompletionCard();
                    }
                }, 300);
            }


            // Helper functions
            function validateData(data) {
                // Add validation logic
                if (!data.header || !data.lineItem) {
                    return false;
                }

                if (data.quantity <= 0) {
                    alert('Quantity must be greater than 0');
                    return false;
                }

                // Add more validation as needed
                return true;
            }
            function showSuccessMessage(message) {
                // Create and show success message
                const $msg = $('<div class="alert alert-success alert-dismissible fade show" role="alert">' +
                               '<strong>Success!</strong> ' + message +
                               '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                               '</div>');

                $('#message-container').html($msg);

                // Auto-hide after 3 seconds
                setTimeout(function() {
                    $msg.alert('close');
                }, 3000);
            }
            function animateToNextCard() {
                const $card = $('#inventory-card');
                $card.addClass('slide-out-left');
                setTimeout(function() {
                    currentIndex++;
                    if (currentIndex < countingData.length) {
                        loadCard(currentIndex);
                        $card.removeClass('slide-out-left').addClass('slide-in-right');
                        setTimeout(function() {
                            $card.removeClass('slide-in-right');
                        }, 500);
                    } else {
                        // All items processed, show completion card
                        showCompletionCard();
                    }
                }, 300);
            }

            function showCompletionCard() {
                const totalItems = totalItemCount;
                const completedItems = processedItems.length;
                const completionRate = totalItems > 0 ? Math.round((completedItems / totalItems) * 100) : 0;

                // Get stock taker initials
                const initials = stockTakerName ? getInitials(stockTakerName) : 'ST';

                // Create confetti effect
                createConfetti();

                $('#inventory-card-container').html(`
                <div class="completion-card fade-in">
                    <div class="celebration-header" style="padding: 25px 20px;">
                        <div class="celebration-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <h3 class="mb-1">✅ Counting Complete</h3>
                        <p class="mb-0">Great job, ${stockTakerName || 'Team'}!</p>
                    </div>

                    <div class="completion-content" style="padding: 25px;">
                        <div class="achievement-stats" style="margin: 15px 0;">
                            <div class="stat-item">
                                <div class="stat-value">${totalItems}</div>
                                <div class="stat-label">Total</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">${completedItems}</div>
                                <div class="stat-label">Done</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">${completionRate}%</div>
                                <div class="stat-label">Complete</div>
                            </div>
                        </div>

                        <div class="thank-you-message" style="margin: 15px 0; font-size: 0.95rem;">
                            <p class="mb-2">All items counted successfully.</p>
                            <p class="mb-0">Thank you for your efforts!</p>
                        </div>

                        <div class="completion-actions" style="margin-top: 20px;">
                            <button class="completion-btn primary" id="finish-btn">
                                <i class="fas fa-check"></i>
                                Finish
                            </button>
                        </div>
                    </div>
                </div>
            `);

                // Bind completion card events
                $('#finish-btn').on('click', function () {
                    $(this).html('<i class="fas fa-spinner fa-spin"></i>');
                    $(this).prop('disabled', true);

                    // Simulate save process
                    setTimeout(() => {
                        $(this).html('<i class="fas fa-check"></i> Done');
                    }, 1000);
                });
            }

            // Get initials from name
            function getInitials(name) {
                if (!name) return 'ST';
                return name.split(' ')
                    .map(part => part.charAt(0))
                    .join('')
                    .toUpperCase()
                    .substring(0, 2);
            }

            // Create confetti effect
            function createConfetti() {
                const colors = ['#ffd700', '#ff6b6b', '#4a6fa5', '#28a745', '#ff9ff3'];
                const container = $('#inventory-card-container');

                for (let i = 0; i < 30; i++) {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + '%';
                    confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.animation = `confettiFall ${Math.random() * 2 + 1}s linear forwards`;
                    confetti.style.opacity = Math.random() * 0.7 + 0.3;
                    confetti.style.width = Math.random() * 10 + 5 + 'px';
                    confetti.style.height = Math.random() * 20 + 10 + 'px';

                    container.append(confetti);

                    // Remove after animation
                    setTimeout(() => {
                        confetti.remove();
                    }, 3000);
                }
            }

            // Function to get all Header data
            function getHeaderData() {
                return {
                    OBJType: String($('#OBJType').val() ?? ""),
                    DocEntry: String($('#DocEntry').val() ?? ""),
                    Docnum: String($('#Docnum').val() ?? ""),
                    CountDate: String($('#CountDate').val() ?? ""),
                    CountTime: String($('#CountTime').val() ?? ""),
                    DocumentDate: String($('#DocumentDate').val() ?? ""),
                    FYearId: String($('#FYearId').val() ?? ""),
                    RefNo: String($('#RefNo').val() ?? ""),
                    Weight: String($('#Weight').val() || "0"),
                    DocStatus: String($('#DocStatus').val() ?? ""),
                    Remarks: String($('#Remarks').val() ?? "")
                };
            }
            function getLineItems() {
                return {
                    ID: "",
                    DocEntry: String(""),
                    Status: String($('.Status').val() ?? "C"),
                    LineNum: String($('.LineNum').val() ?? "0"),
                    ItemID: String($('.ItemID').val() ?? ""),
                    EanCode: String($('.EanCode').val() ?? ""),
                    ItemCode: String($('.ItemCode').val() ?? ""),
                    ItemName: String($('.ItemName').val() ?? ""),
                    LogEmployes: String($('.LogEmployes').val() ?? ""),
                    EmployeeID: String($('.EmployeeID').val() ?? ""),
                    WhsCode: String($('.WhsCode').val() ?? ""),
                    WhsID: String($('.WhsID').val() ?? ""),
                    StockInWhs: String($('.StockInWhs').val() ?? "0"),
                    CountedQty: String($('.qty-value').val() ?? "0"),
                    AcctCode: String($('.AcctCode').val() ?? ""),
                    Remarks: String($('.Remarks').val() ?? ""),
                    BaseLine: String($('.ID').val() ?? "0"),
                    BaseObj: String($('.BaseObj').val() ?? ""),
                    BaseDocEntry: String($('.BaseDocEntry').val() ?? "0"),
                    Price: parseFloat($('.Price').val()) || 0,
                    Weight: String($('.Weight').val() || "0")
                };
            }
        });
    </script>
