                            <span class="detail-label">Item Name</span>
                            <span class="detail-value ItemNameDisplay"></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Warehouse Name</span>
                            <span class="detail-value WhsCodeDisplay"></span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Stock In Warehouse</span>
                            <span class="detail-value StockInWhsDisplay"></span>
                        </div>
                    </div>

                    <div class="quantity-section">
                        <div class="quantity-header">
                            <div class="quantity-title">Counted Quantity</div>
                            @*<div class="system-qty" id="system-qty-display">System: 0</div>*@
                        </div>

                        <div class="container-fluid">
                            <div class="row g-3">
                                <div class="col-12 d-flex justify-content-center align-items-center mb-3">
                                    <button class="qty-btn minus-btn">
                                        <i class="fas fa-minus"></i>
                                    </button>
                                    <div class="col-9">
                                        <input type="number" class="form-control form-control-lg qty-value mx-2" value="0" style="max-width: 250px;">
                                    </div>
                                    <button class="qty-btn plus-btn">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>

                                <div class="col-md-6" hidden>
                                    <label class="form-label">ID</label>
                                    <input type="number" class="form-control ID">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Doc Entry</label>
                                    <input type="number" class="form-control DocEntry">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Status</label>
                                    <input type="text" class="form-control Status" value="C">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Line No</label>
                                    <input type="number" class="form-control LineNum">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Item ID</label>
                                    <input type="number" class="form-control ItemID">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">EAN Code</label>
                                    <input type="text" class="form-control EanCode">
                                </div>

                                <div class="col-md-6"hidden>
                                    <label class="form-label">Item Code</label>
                                    <input type="number" class="form-control ItemCode">
                                </div>

                                <div class="col-md-6"hidden>
