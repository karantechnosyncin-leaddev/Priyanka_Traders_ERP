                </div>
                <!-- DocEntry -->
                <div class="col-md-4">
                    <label for="DocEntry" class="form-label">Doc Entry</label>
                    <input type="number" class="form-control" id="DocEntry" name="DocEntry" value="">
                </div>
                <!-- Docnum -->
                <div class="col-md-4">
                    <label for="Docnum" class="form-label">Document Number</label>
                    <input type="number" class="form-control" id="Docnum" name="Docnum" value="">
