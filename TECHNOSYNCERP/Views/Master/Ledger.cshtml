<script>
    $(document).ready(function () {
        //Ledger
        {
            // Cached DOM elements
            const $ledgerTree = $('#ledgerTree');
            const $ledgerForm = $('#ledgerForm');
            const $groupName = $('#groupName');
            const $btnSave = $('#btnSave');
            const $btnSaveSpinner = $('#btnSaveSpinner');
            const $btnDelete = $('#btnDelete');
            const $parentLedger = $('#parentLedger');
            // Application state
            const state = {
                ledgerData: [],
                currentLedger: null,
                formMode: 'add',
                isLoading: false,
                dirtyLedgers: new Set(), // Track IDs of modified ledgers
                newLedgers: new Set()    // Track IDs of new ledgers
            };
            // Initialize application
            function init() {
                    bindEvents();
                    loadData();
            }
            init();
            // Load data from server
            function loadData() {
                state.isLoading = true;
                showLoadingState();

                // Clear dirty flags when loading fresh data
                state.dirtyLedgers.clear();
                state.newLedgers.clear();

                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GETLEDGER", "Master")',
                    contentType: "application/json; charset=utf-8",
                    cache: false,
                    success: function (data) {
                        if (data && data.length) {
                            state.ledgerData = data.map(ledger => ({
                                ...ledger,
                                ID: String(ledger.ID),
                                BaseID: String(ledger.BaseID)
                            }));
                            renderLedgerTree();
                            populateParentLedgerOptions();
                        }
                        resetForm();
                    },
                    error: function(xhr) {
                        const errorMessage = xhr.responseText || "Failed to load ledger data";
                        Notify('error', errorMessage, '');
                    },
                    complete: function() {
                        state.isLoading = false;
                        hideLoadingState();
                    }
                });
            }
            // Save only changed data to server
            function saveData() {
                    if (state.dirtyLedgers.size === 0) return;

                    state.isLoading = true;
                    $btnSave.prop('disabled', true);
                    $btnSaveSpinner.removeClass('d-none');

                    // Get only changed/new ledgers
                    var changedLedgers = state.ledgerData.filter(ledger =>
                        state.dirtyLedgers.has(ledger.ID)
                    ).map(ledger => ({
                        ...ledger,
                        IsNew: state.newLedgers.has(ledger.ID) // Mark new ledgers for backend
                    }));
                    changedLedgers[0].ID =$("#ledgerID").val() ||null;
                    changedLedgers[0].Code =$("#Code").val() || null;
                    changedLedgers[0].PhoneNo =$("#Phone").val();
                    changedLedgers[0].MobileNo =$("#MobileNo").val() || null;
                    changedLedgers[0].Email =$("#Email").val() || null;
                    changedLedgers[0].WebSite =$("#Website").val() || null;
                    changedLedgers[0].ContPer =$("#ContactPerson").val() || null;
                    changedLedgers[0].ContMobiNo =$("#CPMobileNumber").val() || null;

                    changedLedgers[0].CredID =$("#PaymentTerms").val() || null;
                    changedLedgers[0].CredAmt =$("#CreditLimit").val() || null;

                    changedLedgers[0].GSTIN =$("#GSTIN").val() || null;
                    changedLedgers[0].GSTINTYP =$("#GSTINTYP").val() || null;
                    changedLedgers[0].PANNO =$("#PAN").val() || null;
                    changedLedgers[0].TDSApplicable = $("#TDSApplicable").is(":checked") ? "Y" : "N";
                    changedLedgers[0].CashAcc = $("#CashAcc").is(":checked") ? "Y" : "N";
                    changedLedgers[0].ControlAcc = $("#ControlAcc").is(":checked") ? "Y" : "N";


                    changedLedgers[0].AssesseeTyp =$("#AssesseeTyp").val() || null;
                    changedLedgers[0].TDSID = $("#TDSCode").val() || null;


                    var Address = [];
                    var BankInfo = [];
                   if ($("#LedgerType").val() == "C" || $("#LedgerType").val() == "S"){
                            $("#addressTable tbody tr").each(function(){
                                var row=$(this);
                                var Addressid =row.find(".addid").text()
                                var mainid= row.data('id').toString()
                                if(row.data('flag')=="N"){
                                    mainid= null
                                }
                                if(Addressid){
                                    var obj ={
                                          AddID:mainid,
                                          AddressID:Addressid,
                                          AdresType:row.find('.type').data('type'),
                                          LedgerID:null,
                                          Address1:row.find(".address1").text(),
                                          Address2:row.find(".address2").text(),
                                          City:row.find(".city").text(),
                                          PinCode:row.find(".postalCode").text(),
                                          Stat_Id:row.find(".stateid").text(),
                                          Coun_Id:row.find(".countryid").text(),
                                          GSTIN:row.find(".addgst").text(),
                                          GSTINTYP:row.find(".addgsttype").text(),
                                          IsActive:row.find(".isactive").text() ,
                                    }
                                    Address.push(obj)
                                }
                            })
                            if (Address.length === 0) {
                           Address.push({
                               AddID: null,
                               AddressID: "BILL TO",
                               AdresType: "B",
                               LedgerID: null,
                               Address1: "",
                               Address2: "",
                               City: "",
                               PinCode: "",
                               Stat_Id: $("#State").val(),
                               Coun_Id: $("#Country").val(),
                               GSTIN: "",
                               GSTINTYP: "",
                               IsActive: "A",
                           });
                           Address.push({
                               AddID: null,
                               AddressID: "SHIP TO",
                               AdresType: "S",
                               LedgerID: null,
                               Address1: "",
                               Address2: "",
                               City: "",
                               PinCode: "",
                               Stat_Id: $("#State").val(),
                               Coun_Id: $("#Country").val(),
                               GSTIN: "",
                               GSTINTYP: "",
                               IsActive: "A",
                           });
                       }
                            $("#bankAccountsTable tbody tr").each(function(){
                                var row=$(this);
                                if(row.data('bank-id')!==""){
                                    var obj ={
                                          ID:row.data('id').toString() || null,
                                          BankID:row.data('bank-id').toString() || null,
                                          LedgerID:null,
                                          BankAcctName:row.find(".BankAcctName").text(),
                                          BankAcctNo:row.find(".BankAcctNo").text(),
                                          IFSCCode:row.find(".IFSCCode").text(),
                                          UPIID:row.find(".UPIID").text(),
                                          IsActive:row.find(".IsActiveCell").text()=="Active"?"A":"I",
                                    }
                                    BankInfo.push(obj)
                                }
                            })
                    }
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("CREATELEDGER", "Master")',
                        contentType: "application/json; charset=utf-8",
                        data: JSON.stringify({
                            Ledgers: changedLedgers,
                            Address: Address,
                             BankInfo: BankInfo
                            }),
                        success: function (data) {
                            if (data.success) {
                                Notify('success', data.message, '');
                                // Clear dirty flags after successful save
                                state.dirtyLedgers.clear();
                                state.newLedgers.clear();
                                $("#addressTable tbody").html("")
                                $("#bankAccountsTable tbody").html("")
                                $("#btnReset").click()

                               //// If backend returns updated data, use it
                               //if (data.updatedLedgers) {
                               //    state.ledgerData = data.updatedLedgers.map(ledger => ({
                               //        ...ledger,
                               //        ID: String(ledger.ID),
                               //        BaseID: String(ledger.BaseID)
                               //    }));
                               //    LoadAddress($("#ledgerID").val())
                               //    loadBankAccounts($("#ledgerID").val())
                               //    populateParentLedgerOptions();
                               //}

                            } else {
                                Notify('error', data.message, '');
                            }
                        },
                        error: function(xhr) {
                            const errorMessage = xhr.responseText || "Failed to save ledger data";
                            Notify('error', errorMessage, '');
                        },
                        complete: function() {
                            state.isLoading = false;
                            $btnSave.prop('disabled', false);
                            $btnSaveSpinner.addClass('d-none');
                        }
                    });
                }
            // Render the ledger tree
            function renderLedgerTree() {
                $ledgerTree.empty();

                const rootLedgers = state.ledgerData.filter(ledger => ledger.BaseID === "0");

                if (rootLedgers.length === 0) {
                    $ledgerTree.append('<div class="text-muted">No ledgers found. Add a new ledger to create one.</div>');
                    return;
                }

                const $ul = $('<ul class="list-group list-group-flush"></ul>');
                rootLedgers.forEach(ledger => $ul.append(createLedgerNode(ledger)));
                $ledgerTree.append($ul);
            }
            // Create a single ledger node
            function createLedgerNode(ledger) {
                const children = state.ledgerData.filter(l => l.BaseID === ledger.ID);
                const hasChildren = children.length > 0;
                let color ='';
                if(ledger.Postable=="A"){
                   color='text-success'
                }
                const $li = $(`
                    <li class="list-group-item tree-item" data-id="${ledger.ID}">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                ${hasChildren ? '<i class="bi bi-caret-down-fill me-1 toggle-children"></i>' : ''}
                                <span class="ledger-name ${color}">${ledger.GroupName}</span>
                            </div>
                            <div>
                                <button class="btn btn-sm btn-outline-primary edit-item" data-id="${ledger.ID}" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </div>
                        </div>
                    </li>
                `);

                if (hasChildren) {
                    const $childrenUl = $('<ul class="list-group list-group-flush ms-4"></ul>');
                    children.forEach(child => $childrenUl.append(createLedgerNode(child)));
                    $li.append($childrenUl);
                }

                return $li;
            }
            // Populate parent ledger dropdown
            function populateParentLedgerOptions() {
                $parentLedger.empty().append('<option value="0">-- Root Ledger --</option>');

                state.ledgerData.forEach(ledger => {
                        if(ledger.Postable =="T"){
                          if (state.formMode !== 'edit' || ledger.ID !== state.currentLedger?.ID   ) {
                            if (!isChildOf(ledger.ID, state.currentLedger?.ID)) {
                                $parentLedger.append(`<option value="${ledger.ID}">${ledger.GroupName}</option>`);
                            }
                        }
                    }

                });
            }
            // Check if ledger is child of another
            function isChildOf(ledgerID, parentID) {
                if (!parentID) return false;

                const ledger = state.ledgerData.find(l => l.ID === ledgerID);
                if (!ledger) return false;

                if (ledger.BaseID === parentID) return true;
                if (ledger.BaseID !== "0") return isChildOf(ledger.BaseID, parentID);

                return false;
            }
            // Reset form to add mode
            function resetForm() {
                state.formMode = 'add';
                state.currentLedger = null;

                $ledgerForm[0].reset();
                $('#ledgerID').val('');
                $('#isActive').prop('checked', true);
                $parentLedger.val('0');
                $btnDelete.hide();

                $('#formModeBadge')
                    .text('Add Mode')
                    .removeClass('bg-warning')
                    .addClass('bg-light text-dark');

                $('#btnSaveText').text('Save Ledger');
                $('.otherdetails').hide();
                $('.is-invalid').removeClass('is-invalid');
                $("#Code").val("");
                $("#Phone").val("");
                $("#MobileNo").val("");
                $("#Email").val("");
                $("#Website").val("");
                $("#ContactPerson").val("");
                $("#CPMobileNumber").val("");
                $("#PaymentTerms").val("");
                $("#CreditLimit").val("");
                $("#GSTIN").val("");
                $("#GSTINTYP").val("");
                $("#ledgerSearch").val("");
                $("#PAN").val("");
                $("#LedgerType").val("");
                $("#TDSApplicable").prop("checked", false);
                $("#ControlAcc").prop("checked", false);
                $("#CashAcc").prop("checked", false);
                $("#CashAcc").prop("disabled", false);
                $("#ControlAcc").prop("disabled", false);
                $("#BankAcc").prop("disabled", false);

                $("#AssesseeTyp").val("");
                $("#TDSCode").val("");
                $("#ledgerID").val("");
                $(".TDSApplicablediv").hide();
               

            }
            // Load ledger into form for editing
            function loadLedgerIntoForm(ledger) {
             
                state.formMode = 'edit';
                state.currentLedger = ledger;
                $('#Postable').val(ledger.Postable);
                $('#ledgerID').val(ledger.ID);
                $("#LedgerType").val(ledger.LedgerType.trim());
                $groupName.val(ledger.GroupName);
                $('#isActive').prop('checked', ledger.IsActive === 'A' || ledger.IsActive === true);
                $btnDelete.show();

                $('#formModeBadge')
                    .text('Edit Mode')
                    .removeClass('bg-light text-dark')
                    .addClass('bg-warning');

                $('#btnSaveText').text('Update Ledger');

                populateParentLedgerOptions();
                $parentLedger.val(ledger.BaseID || '0');

                scrollToForm();
            }
            function scrollToForm() {
                $('html, body').animate({
                    scrollTop: $('#ledgerDetailsForm').offset().top - 20
                }, 300);
            }
            // Save ledger (add or update)
            function saveLedger() {
                const groupName = $groupName.val().trim();
                if (!groupName) {
                    $groupName.addClass('is-invalid');
                    return false;
                }
                $groupName.removeClass('is-invalid');

                const ledger = {
                    ID: $('#ledgerID').val() || generateNewId(),
                    GroupName: groupName,
                    BaseID: $parentLedger.val() || '0',
                    IsActive: $('#isActive').is(':checked') ? 'A' : 'I',
                    ControlAcc: $('#ControlAcc').is(':checked') ? 'Y' : 'N',
                    CashAcc: $('#CashAcc').is(':checked') ? 'Y' : 'N',
                    BankAcc: $('#BankAcc').is(':checked') ? 'Y' : 'N',


                    Postable: $('#Postable').val(),
                    LedgerType: $('#LedgerType').val()
                };

                if (state.formMode === 'add') {
                    state.ledgerData.push(ledger);
                    state.dirtyLedgers.add(ledger.ID);
                    state.newLedgers.add(ledger.ID);
                } else {
                    const index = state.ledgerData.findIndex(l => l.ID === ledger.ID);
                    if (index !== -1) {
                        state.ledgerData[index] = ledger;
                        state.dirtyLedgers.add(ledger.ID);
                    }
                }

                saveData();
                return true;
            }
            // Generate new ID
            function generateNewId() {
                const maxId = Math.max(...state.ledgerData.map(l => parseInt(l.ID, 10)), 0);
                return String(maxId + 1);
            }
            // Delete ledger
            function deleteLedger() {
                if (!state.currentLedger) return;

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("DELETELEDGER", "Master")',
                            type: 'POST',
                            data: { id: state.currentLedger.ID },
                            beforeSend: function() {
                                $('#btnDelete').prop('disabled', true)
                                    .html('<i class="bi bi-hourglass"></i> Deleting...');
                            },
                            success: function(response) {
                                if (response?.success) {
                                    Notify('success', 'Success', response.message || 'Ledger deleted!');
                                    state.ledgerData = state.ledgerData.filter(l =>
                                        l.ID !== state.currentLedger.ID &&
                                        l.BaseID !== state.currentLedger.ID
                                    );
                                    renderLedgerTree();
                                    resetForm();
                                } else {
                                    Notify('warning', 'Warning', response?.message || 'Delete failed');
                                }
                            },
                            error: function(xhr) {
                                const errorMessage = xhr.responseJSON?.message ||
                                    xhr.responseText || 'Error deleting ledger';
                                Notify('error', 'Error', errorMessage);
                            },
                            complete: function() {
                                $('#btnDelete').prop('disabled', false)
                                    .html('<i class="bi bi-trash"></i> Delete');
                            }
                        });
                    }
                });
            }
            // Bind event handlers
            function bindEvents() {
                // Form events
                $ledgerForm.on('submit', e => e.preventDefault() && saveLedger());
                $('#btnReset').click(resetForm);
                $('#btnReset').click(loadData);
                $('#cancelBtn').click(resetForm);
                $btnSave.click(saveLedger);
                $btnDelete.click(deleteLedger);
                // Tree events using delegation
                $ledgerTree.on('click', '.edit-item', function(e) {
                    e.stopPropagation();
                    const ledger = state.ledgerData.find(l => l.ID === $(this).data('id').toString());
                    if (ledger) loadLedgerIntoForm(ledger);
                    if (ledger.ControlAccc == 'Y') {
                        $("#ControlAcc").prop("checked", true);
                    } else {
                        $("#ControlAcc").prop("checked", false);
                    }
                    if (ledger.BankAcc == 'Y') {
                        $("#BankAcc").prop("checked", true);
                    } else {
                        $("#BankAcc").prop("checked", false);
                    }
                    if (ledger.CashAcc == 'Y') {
                        $("#CashAcc").prop("checked", true);
                    } else {
                        $("#CashAcc").prop("checked", false);
                    }
                    if (ledger.ControlAccc == "Y" || ledger.LedgerType == "S" || ledger.LedgerType == "C"){
                              $(".otherdetails").show();
                                 LoadAddress(ledger.ID)
                                 loadBankAccounts(ledger.ID);
                                 GetLedgertab(ledger.ID)
                            }else{
                                $(".otherdetails").hide();
                            }
                          
                });
                function GetLedgertab(id){
                     $.ajax({
                        type: "GET",
                        url: '@Url.Action("GETLEDGERBYID", "Master")',
                        data:{id:id},
                        contentType: "application/json; charset=utf-8",
                        cache: false,
                         success: function (data) {
                            if (data && data.length) {
                                var item = data[0];
                                   $("#Code").val(data[0].Code);
                                    $("#Phone").val(data[0].PhoneNo);
                                    $("#MobileNo").val(data[0].MobileNo);
                                    $("#Email").val(data[0].Email);
                                    $("#Website").val(data[0].WebSite);
                                    $("#ContactPerson").val(data[0].ContPer);
                                    $("#CPMobileNumber").val(data[0].ContMobiNo);
                                    $("#PaymentTerms").val(data[0].CredID);
                                    $("#CreditLimit").val(data[0].CredAmt);
                                    $("#GSTIN").val(data[0].GSTIN);
                                    $("#GSTINTYP").val(data[0].GSTINTYP);
                                    $("#PAN").val(data[0].PANNO);
                                    if(data[0].TDSApplicable=='Y'){
                                      $(".TDSApplicablediv").show();
                                      $("#TDSApplicable").prop("checked",true);
                                    }
                                    //if (data[0].ControlAccc == 'Y') {
                                    //    $("#ControlAcc").prop("checked", true);
                                    //} else {
                                    //    $("#ControlAcc").prop("checked", false);
                                    //}
                                    
                                $("#AssesseeTyp").val(data[0].AssesseeTyp.trim());
                                loadTDS(data[0].AssesseeTyp.trim(), data[0].TDSID)
                            }
                        },
                        error: function(xhr) {
                            const errorMessage = xhr.responseText || "Failed to load ledger data";
                            Notify('error', errorMessage, '');
                        },
                        complete: function() {
                            state.isLoading = false;
                            hideLoadingState();
                        }
                    });
                }
               // $("#Postable").change(function () {
               //     var val = $(this).val()
               //     if (val == "A" ) {
               //         $(".Ledgerdiv").show();
               //     } else {
               //         $(".Ledgerdiv").hide();
               //     }
               // })
                $(document).on("click","#ControlAcc", function () {
                    if ($(this).is(":checked")) {
                        $(".otherdetails").show();
                        $(".LedgerTypediv").show();
                        $("#CashAcc").prop("disabled", true);
                        $("#BankAcc").prop("disabled", true);

                    } else {
                        $("#CashAcc").prop("disabled", false);
                        $("#BankAcc").prop("disabled", false);
                        $(".otherdetails").hide();
                        $("#LedgerType").val("");
                        $("#Code").val("");
                        $(".LedgerTypediv").hide();
                        resetAddress();
                        resetBankForm();
                    }
                })
                $(document).on("click", "#CashAcc", function () {
                    if ($(this).is(":checked")) {
                        $(".otherdetails").hide();
                        $(".LedgerTypediv").hide();
                        $("#LedgerType").val("");
                        $("#ControlAcc").prop("disabled", true);
                        $("#BankAcc").prop("disabled", true);
                    } else {
                        $("#ControlAcc").prop("disabled", false);
                        $("#BankAcc").prop("disabled", false);
                    }
                })
                $(document).on("click", "#BankAcc", function () {
                    if ($(this).is(":checked")) {
                        $(".otherdetails").hide();
                        $(".LedgerTypediv").hide();
                        $("#LedgerType").val("");
                        $("#ControlAcc").prop("disabled", true);
                        $("#CashAcc").prop("disabled", true);

                    } else {
                        $("#ControlAcc").prop("disabled", false);
                        $("#CashAcc").prop("disabled", false);
                    }
                })
                $("#LedgerType").change(function(){
                  var val =$(this).val()
                    if (val == "C" || val == "S"){
                        GetNextCardcode(val)
                    } else {
                        resetAddress();
                        $("#Code").val("");
                        resetBankForm();
                    }
                })
                $("#Postable").on('input','#groupName',function(){
                  var val =$(this).val()
                   if (val !== null &&
                    /^\s*sundrycreditors\s*$/i.test(val.replace(/\s+/g, '')) ||
                    /^\s*sundrydebitors\s*$/i.test(val.replace(/\s+/g, '')))
                    {
                        $(".otherdetails").show();
                    }
                  else{
                    $(".otherdetails").hide();
                  }
                })
                $ledgerTree.on('click', '.tree-item > div:first-child', function(e) {
                    if (!$(e.target).is('button, .bi-grip-vertical, .toggle-children')) {
                        $(this).parent().find('> ul').toggle();
                    }
                });
                $ledgerTree.on('click', '.toggle-children', function(e) {
                    e.stopPropagation();
                    $(this).toggleClass('bi-caret-down-fill bi-caret-right-fill')
                        .closest('li').find('> ul').toggle();
                });
                // Search functionality
                $('#ledgerSearch').on('input', function() {
                    const term = $(this).val().toLowerCase();
                    if (!term) return $ledgerTree.find('li').show();

                    $ledgerTree.find('li').each(function() {
                        const $li = $(this);
                        const matches = $li.find('.ledger-name').text().toLowerCase().includes(term);
                        $li.toggle(matches);
                        if (matches) {
                            $li.parents('li').show();
                            $li.find('> ul').show();
                        }
                    });
                });
            }
            // Loading state management
            function showLoadingState() {
                $('#loadingOverlay').removeClass('d-none');
            }
            function hideLoadingState() {
                $('#loadingOverlay').addClass('d-none');
            }

            function GetNextCardcode(flag){
                 $.ajax({
                        type: "GET",
                        url: '@Url.Action("GETNEXTLEDGERCODE", "Master")',
                        contentType: "application/json; charset=utf-8",
                        data: { flag: flag },
                        cache: false,
                        success: function (data) {
                            if (data && data.length) {
                                $("#Code").val(data[0].NextLedgerCode);
                            } else {
                                Notify('error', 'Failed to get next ledger code', '');
                            }
                        },
                        error: function(xhr) {
                            const errorMessage = xhr.responseText || "Failed to load ledger data";
                            Notify('error', errorMessage, '');
                        },
                        complete: function() {
                            state.isLoading = false;
                            hideLoadingState();
