        function updateTableWithNewData(formData) {
            const $tbody = $('#bankAccountsTable tbody');
            let $row = $tbody.find(`tr[data-id="${formData.ID}"]`);

            const statusBadge = formData.IsActive === '1'
                ? '<span class="badge bg-success">Active</span>'
                : '<span class="badge bg-secondary">Inactive</span>';

            if ($row.length) {
                // Update
                $row.attr('data-bank-id', formData.BankID || '');
                    $row.attr('data-id', formData.ID || '');
                $row.find('.BankName').text($('#BankName option:selected').text() || 'N/A');
                $row.find('.BankAcctName').text(formData.BankAcctName || 'N/A');
                $row.find('.BankAcctNo').text(formData.BankAcctNo || 'N/A');
                $row.find('.IFSCCode').text(formData.IFSCCode || 'N/A');
                $row.find('.UPIID').text(formData.UPIID || 'N/A');
                $row.find('.IsActiveCell')
                    .attr('data-active', formData.IsActive)
                    .html(statusBadge);
            } else {
                // Add
                const newRow = `
                    <tr data-id="" data-bank-id="${formData.BankID || ''}">
                        <td class="BankName">${$('#BankName option:selected').text() || 'N/A'}</td>
                        <td class="BankAcctName">${formData.BankAcctName || 'N/A'}</td>
                        <td class="BankAcctNo">${formData.BankAcctNo || 'N/A'}</td>
                        <td class="IFSCCode">${formData.IFSCCode || 'N/A'}</td>
                        <td class="UPIID">${formData.UPIID || 'N/A'}</td>
                        <td class="IsActiveCell" data-active="${formData.IsActive}">${statusBadge}</td>
                        <td class="text-nowrap">
                                <button class="btn btn-sm btn-outline-primary edit-btn me-1" data-id="${formData.ID}" title="Edit">
                                <i class="bi bi-pen"></i>
                            </button>
                                <button class="btn btn-sm btn-outline-danger delete-btn" data-id="${formData.ID}" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                // If it was "no data" placeholder row, remove it first
                const $placeholder = $tbody.find('tr td[colspan="7"]');
                if ($placeholder.length) $placeholder.closest('tr').remove();
                $tbody.prepend(newRow);
            }
        }
        function editBankAccount(id) {
            const $row = $(`tr[data-id="${id}"]`);
            if (!$row.length) {
                showError('Account not found for editing.');
                return;
            }
            const account = {
                ID: id,
                BankID: $row.attr('data-bank-id') || '',
                BankName: $row.find('.BankName').text(),
                BankAcctName: $row.find('.BankAcctName').text(),
                BankAcctNo: $row.find('.BankAcctNo').text(),
                IFSCCode: $row.find('.IFSCCode').text(),
                UPIID: $row.find('.UPIID').text(),
                IsActive: $row.find('.IsActiveCell').data('active') ? '1' : '0'
            };
            populateBankForm(account);
            $('#addBankModal').modal('show');
        }
        function populateBankForm(account) {
            $('#BankID').val(account.ID || null);
            $('#BankName').val(account.BankID || '');
            $('#BankAcctName').val(account.BankAcctName || '');
            $('#BankAcctNo').val(account.BankAcctNo || '');
            $('#IFSCCode').val(account.IFSCCode || '');
            $('#UPIID').val(account.UPIID || '');
            $('#IsActive').val(account.IsActive || '1');
            $('#addBankModalLabel').text(account.ID ? 'Edit Bank Account' : 'Add Bank Account');
        }
        function saveBankAccount() {
            const formData = {
                ID: $('#BankID').val() || null,
                BankID: $('#BankName').val(),
                BankAcctName: $('#BankAcctName').val(),
                BankAcctNo: $('#BankAcctNo').val(),
                IFSCCode: $('#IFSCCode').val(),
                UPIID: $('#UPIID').val(),
                IsActive: $('#IsActive').val()
            };
            updateTableWithNewData(formData);
            $('#addBankModal').modal('hide');
            resetBankForm();
        }
        function showDeleteConfirmation(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    deleteBankAccount(id);
                }
            });
        }
        function deleteBankAccount(id) {
                $(`tr[data-id="${id}"]`).remove();
                const $tbody = $('#bankAccountsTable tbody');
                if ($tbody.find('tr').length === 0) {
                    $tbody.append('<tr><td colspan="7" class="text-center py-4 text-muted">No bank accounts found</td></tr>');
                }
                $.ajax({
                        url: '@Url.Action("DELETELEDGERBANK", "Master")',
                    type: 'POST',
                    data: { id: id},
                    beforeSend: function() {

                    },
                    success: function(response) {
                        if (response?.success) {
                            Notify('success', 'Success', response.message || 'Bank Info deleted!');
                        } else {
                            Notify('warning', 'Warning', response?.message || 'Delete failed');
                        }
                    },
                    error: function(xhr) {
                        const errorMessage = xhr.responseJSON?.message ||
                            xhr.responseText || 'Error deleting ledger';
                        Notify('error', 'Error', errorMessage);
                    },
                    complete: function() {

                    }
                });
        }
        function resetBankForm() {
            $('#bankAccountForm')[0].reset();
            $('#BankID').val('');
            $('#IsActive').val('1');
            $('#addBankModalLabel').text('Add Bank Account');
        }
        function showSuccess(message) {
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: message,
                timer: 2000,
                showConfirmButton: false
            });
        }
        function showError(message) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: message
            });
        }
        function showWarning(title, message) {
            Swal.fire({
                icon: 'warning',
                title: title,
                text: message
            });
        }
        $('#saveBankBtn').on('click', function () {
            if ($('#bankAccountForm')[0].checkValidity()) {
                saveBankAccount();
            } else {
                $('#bankAccountForm')[0].reportValidity();
            }
        });
        // Reset form when modal is closed
        $('#addBankModal').on('hidden.bs.modal', function () {
            resetBankForm();
        });
        // Event delegation for edit/delete buttons
        $('#bankAccountsTable')
        .on('click', '.edit-btn', function () {
            const id = $(this).data('id');
            editBankAccount(id);
        })
        .on('click', '.delete-btn', function () {
            const id = $(this).data('id');
            showDeleteConfirmation(id);
        });
        loadBanks()
    }
