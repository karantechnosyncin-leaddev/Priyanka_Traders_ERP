<style>
    /* Custom responsive styles */
    .nav-pills .nav-link {
        padding: 0.75rem 1rem;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .tab-content {
        padding: 1rem;
    }

    @@media (max-width: 768px) {
        .nav-pills {
            flex-direction: row !important;
            overflow-x: auto;
            white-space: nowrap;
            margin-bottom: 1rem;
        }

            .nav-pills .nav-link {
                display: inline-block;
                margin-bottom: 0;
                margin-right: 0.5rem;
            }

        .card-header {
            flex-direction: column;
            align-items: flex-start !important;
        }

            .card-header button {
                margin-top: 0.5rem;
                width: 100%;
            }

        .form-label {
            font-size: 0.85rem;
        }

        .btn {
            margin-bottom: 0.5rem;
            width: 100%;
        }

        .d-flex.justify-content-end {
            justify-content: flex-start !important;
        }

        .otherdetails {
            margin-top: 1rem !important;
        }
    }

    @@media (max-width: 576px) {
        .row.g-3 > [class^="col-"] {
            margin-bottom: 0.5rem;
        }

        .modal-dialog {
            margin: 0.5rem;
        }

        .table-responsive {
            font-size: 0.8rem;
        }

        .btn-group {
            flex-wrap: wrap;
        }

            .btn-group .btn {
                margin-bottom: 0.5rem;
            }
    }

    /* Better spacing for form elements */
    .form-control, .form-select {
        margin-bottom: 0.5rem;
    }

    /* Improved table responsiveness */
    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    /* Button group responsiveness */
    .btn-group-responsive {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    /* Modal adjustments */
    .modal-body {
        padding: 1rem;
    }

    /* Address form improvements */
    #addressFormContainer {
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 0.25rem;
    }
</style>

<div class="container-fluid">
    <div class="row mt-2">
        <div class="col-12">
            <div class="card p-2 rounded shadow-sm">
                <div class="row align-items-center">
                    <div class="col-md-6 mb-2 mb-md-0">
                        <h3 id="doctitle"><b>Business Partner</b></h3>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex justify-content-md-end flex-wrap btn-group-responsive">
                            @if (ViewBag.BtnAuth != null)
                            {
                                @foreach (var item in (List<Dictionary<string, object>>)ViewBag.BtnAuth)
                                {
                                    var btnName = item["BtnName"]?.ToString().Trim();
                                    var btnauth = item["Auth"]?.ToString();
                                    var icon = item["Icon"]?.ToString();
                                    var ColorClass = item["ColorClass"]?.ToString();
                                    if (btnauth == "Y" && !string.IsNullOrEmpty(btnName))
                                    {
                                        switch (btnName)
                                        {
                                            case "Find":
                                                <button id="btnFind" data-bs-toggle="modal" data-bs-target="#receiptListModal" class="btn @ColorClass mb-1 ">
                                                    <i class="@icon"></i> @btnName
                                                </button>
                                                break;
                                            case "Attachments":
                                                <button id="Attachments" data-bs-toggle="modal" data-bs-target="#Attachment" class="btn @ColorClass mb-1 ">
                                                    <i class="@icon"></i> @btnName
                                                </button>
                                                break;
