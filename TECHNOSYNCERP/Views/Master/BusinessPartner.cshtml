    const rowMarkup = `
        <tr data-id="${formData.ID}" data-bank-id="${formData.BankID}">
            <td class="BankName">${$('#BankName option:selected').text() || 'N/A'}</td>
            <td class="BankAcctName">${formData.BankAcctName || 'N/A'}</td>
            <td class="BankAcctNo">${formData.BankAcctNo || 'N/A'}</td>
            <td class="IFSCCode">${formData.IFSCCode || 'N/A'}</td>
            <td class="UPIID">${formData.UPIID || 'N/A'}</td>
            <td class="IsActiveCell" data-active="${formData.IsActive}">
                ${statusBadge}
            </td>
            <td class="text-nowrap">
                <button class="btn btn-sm btn-outline-primary edit-btn me-1" data-id="${formData.ID}">
                    <i class="bi bi-pen"></i>
                </button>
                <button class="btn btn-sm btn-outline-danger delete-btn" data-id="${formData.ID}">
                    <i class="bi bi-trash"></i>
                </button>
            </td>
        </tr>
    `;

    // If exists → Update
    if ($row.length) {
        $row.replaceWith(rowMarkup);
        return;
    }

    // If placeholder exists → remove first
    const $placeholder = $bankTableBody.find('td[colspan="7"]');
    if ($placeholder.length) $placeholder.closest('tr').remove();

    // Add new
    $bankTableBody.prepend(rowMarkup);
}

