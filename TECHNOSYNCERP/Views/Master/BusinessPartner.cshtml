    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h1 class="modal-title fs-5" id="paymentTermsModalLabel">Payment Terms Master</h1>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6 text-end">
                        <button class="btn btn-success" id="addNewTermBtn">
                            <i class="bi bi-plus-circle"></i> Add New Term
                        </button>
                    </div>
                </div>

                <!-- List View -->
                <div class="table-responsive" id="termsListView">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
