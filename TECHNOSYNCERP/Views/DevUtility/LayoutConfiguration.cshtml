<div class="container-fluid mb-4 mt-3">
    <div class="row">
        <div class="col-12">
            <div class="card p-2 rounded shadow-sm">
                <div class="row">
                    <div class="col-md-6 d-flex align-items-center">
                        <h3><b>Layout Configuration</b></h3>
                    </div>
                    <div class="col-md-6 d-flex justify-content-end align-items-center flex-wrap">
                        <button id="btnSave" class="btn btn-success mb-1 me-2">
                            <i class="bi bi-save me-1"></i>Save
                        </button>
                        <button id="btnReset" class="btn btn-warning mb-1 me-2">
                            <i class="bi bi-arrow-counterclockwise me-1"></i> Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12 mt-3">
            <div class="card p-3">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="mainitemtable">
                        <thead>
                            <tr>
                                <th class="text-center">Sr No</th>
                                <th>Delete</th>
                                <th>Layout Name</th>
                                <th>Menu Name</th>
                                <th>Icon</th>
                                <th>Size</th>
                                <th>File Name</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-12 text-end">
                        <button class="btn btn-primary" id="AddNewLine">Add New Line</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Load data on page load
        LoadDefGL();

        $("#btnReset").click(function () {
            LoadDefGL();
        });

        function LoadDefGL() {
            $.ajax({
                url: '@Url.Action("GETDLC", "DevUtility")',
                method: 'GET',
                success: function (response) {
                    if (Array.isArray(response) && response.length > 0) {
                        var Table = $("#mainitemtable tbody");
                        Table.empty();

                        for (var i = 0; i < response.length; i++) {
                            var row = `
                                <tr data-id='${response[i].ID}'>
                                    <td class="text-center">${i + 1}</td>
                                    <td class="text-center">
                                        <button class="btn btn-danger btn-sm deleterow">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                    <td><input value="${response[i].LayoutName || ''}" type="text" class="form-control form-control-sm LayoutName" /></td>
                                    <td><input value="${response[i].MenuName || ''}" type="text" class="form-control form-control-sm MenuName" data-id="${response[i].ObjType || ''}" /></td>
                                    <td><input value="${response[i].Icon || ''}" type="text" class="form-control form-control-sm Icon" /></td>
                                    <td><input value="${response[i].Size || ''}" type="text" class="form-control form-control-sm Size" /></td>
                                    <td><input value="${response[i].FileName || ''}" type="text" class="form-control form-control-sm FileName" /></td>
                                </tr>
                            `;
                            Table.append(row);
                        }
                    } else {
                        Notify('info', 'Info', 'No records found.');
                    }
                },
                error: function (xhr) {
                    Notify('error', 'Error', xhr.responseText);
                }
            });
        }

        $("#AddNewLine").click(function () {
            AddNewLine();
        });

        function AddNewLine() {
            var tablerowlastindex = $("#mainitemtable tbody tr").length + 1;
            $("#mainitemtable tbody").append(`
                <tr data-id=''>
                    <td class="text-center">${tablerowlastindex}</td>
                    <td class="text-center">
                        <button class="btn btn-danger btn-sm deleterow">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                    <td><input type="text" class="form-control form-control-sm LayoutName"/></td>
                    <td><input type="text" class="form-control form-control-sm MenuName" data-id=""/></td>
                    <td><input type="text" class="form-control form-control-sm Icon"/></td>
                    <td><input type="text" class="form-control form-control-sm Size"/></td>
                    <td><input type="text" class="form-control form-control-sm FileName"/></td>
                </tr>
            `);
        }

        $(document).on("click", ".deleterow", function () {
            var btn = $(this);
            var row = btn.closest('tr');
            var id = row.attr("data-id");

            if (id) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '@Url.Action("DELETEDLC", "DevUtility")',
                            type: 'POST',
                            data: { id: id },
                            beforeSend: function () {
                                btn.prop('disabled', true).html('<i class="bi bi-hourglass"></i> Deleting...');
                            },
                            success: function (response) {
                                if (response && response.success) {
                                    Notify('success', 'Success', response.message || 'Document deleted successfully!');
                                    row.remove();
                                    reindexRows();
                                } else {
                                    Notify('warning', 'Warning', response.message || 'Failed to delete document!');
                                }
                            },
                            error: function (xhr, status, error) {
                                const errorMessage = xhr.responseJSON?.message || xhr.responseText || 'Error deleting Document';
                                Notify('error', 'Error', errorMessage);
                            },
                            complete: function () {
                                btn.prop('disabled', false).html('<i class="bi bi-trash"></i>');
                            }
                        });
                    }
                });
            } else {
                row.remove();
                reindexRows();
            }
        });

        function reindexRows() {
            $("#mainitemtable tbody tr").each(function (index) {
                $(this).find("td:first").text(index + 1);
            });
        }

        $("#btnSave").click(function () {
            var data = [];
            $("#mainitemtable tbody tr").each(function () {
                var row = $(this);
                var layoutName = row.find(".LayoutName").val();

                // Only include rows with Layout Name
                if (layoutName !== "") {
                    var obj = {
                        ID: row.attr("data-id") || null,
                        LayoutName: layoutName,
                        MenuName: row.find(".MenuName").val(),
                        ObjType: row.find(".MenuName").attr("data-id"),
                        Icon: row.find(".Icon").val(),
                        Size: row.find(".Size").val(),
                        FileName: row.find(".FileName").val(),
                    };
                    data.push(obj);
                }
            });

            if (data.length === 0) {
                Notify('warning', 'Warning', 'No data to save.');
                return;
            }

            $.ajax({
                url: '@Url.Action("CREATEDLC","DevUtility")',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ List: data }),
                beforeSend: function () {
                    $('#btnSave').prop('disabled', true).html('<i class="bi bi-hourglass"></i> Processing...');
                },
                success: function (response) {
                    if (response.success) {
                        Notify('success', response.message, '');
                        LoadDefGL();
                    } else {
                        Notify('error', 'Failed To Create', response.message);
                    }
                },
                error: function (xhr) {
                    const errorMessage = xhr.responseText || 'Error To Save Document.';
                    Notify('error', 'Error', errorMessage);
                },
                complete: function () {
                    $('#btnSave').prop('disabled', false).html('<i class="bi bi-save"></i> Save');
                }
            });
        });

        // Menu Search Functionality
        var MENUDATA = [];
        var $activeInput = null;

        function LoadMenus() {
            $.ajax({
                type: "GET",
                url: '@Url.Action("GETMENU", "DevUtility")',
                contentType: "application/json; charset=utf-8",
                cache: false,
                success: function (data) {
                    MENUDATA = Array.isArray(data) ? data : [];
                },
                error: function (xhr) {
                    Notify('error', 'Error', xhr.responseText || 'Error loading menus');
                }
            });
        }

        LoadMenus();

        function CreateMenuList(inputClass) {
            $(document).on('input', "#mainitemtable tbody tr td ." + inputClass, function () {
                var $input = $(this);
                $activeInput = $input;
                var value = $input.val().toLowerCase().replace(/_/g, ' ');

                if (value.length < 2) {
                    $('.suggestions-container').hide();
                    return;
                }

                var suggestions = [];
                var suggestionContainerId = 'MenuNameSuggestions-' + $input.closest('tr').index();

                if (!$('#' + suggestionContainerId).length) {
                    $('<div id="' + suggestionContainerId + '" class="suggestions-container"></div>').appendTo('body');
                }

                var $suggestionContainer = $('#' + suggestionContainerId);
                $suggestionContainer.empty();

                if (Array.isArray(MENUDATA) && MENUDATA.length > 0) {
                    var searchTokens = value.split(/\s+/);

                    suggestions = MENUDATA.filter(function (data) {
                        if (data && typeof data === 'object') {
                            var menuName = (data.MenuName || '').toLowerCase();
                            var objType = (data.ObjType || '').toLowerCase();

                            var allTokens = menuName.split(/\s+|[_-]+/).concat(objType.split(/\s+|[_-]+/));

                            return searchTokens.every(function (token) {
                                return allTokens.some(function (itemToken) {
                                    return itemToken.includes(token);
                                });
                            });
                        }
                        return false;
                    }).sort(function (a, b) {
                        return a.MenuName.localeCompare(b.MenuName);
                    }).slice(0, 20);

                    if (suggestions.length > 0) {
                        suggestions.forEach(function (data) {
                            $suggestionContainer.append(
                                `<div class="suggestion-item MItemList" data-id="${data.ObjType || ''}" data-name="${data.MenuName || ''}">
                                    <span class="menu-name">${data.MenuName || ''}</span>
                                </div>`
                            );
                        });

                        var offset = $input.offset();
                        $suggestionContainer.css({
                            top: offset.top + $input.outerHeight(),
                            left: offset.left,
                            width: $input.outerWidth(),
                            position: 'absolute',
                            "z-index": 1000
                        }).show();
                    } else {
                        $suggestionContainer.hide();
                    }
                } else {
                    console.error("MenuData is empty or not defined");
                    $suggestionContainer.hide();
                }
            });
        }

        CreateMenuList("MenuName");

        $(document).on('click', function (e) {
            if (!$(e.target).closest('.suggestions-container, .MenuName').length) {
                $('.suggestions-container').hide();
            }
        });

        $(document).on('click', '.MItemList', function () {
            selectMenuSuggestion($(this));
        });

        $(document).on('keydown', function (e) {
            if (!$activeInput) return;
            var $suggestionContainer = $('.suggestions-container:visible');
            if (!$suggestionContainer.length) return;

            var $items = $suggestionContainer.find('.suggestion-item');
            var $current = $items.filter('.suggestion-item-active');
            var idx = $items.index($current);

            if (e.key === "ArrowDown") {
                e.preventDefault();
                if (idx < $items.length - 1) {
                    $current.removeClass('suggestion-item-active');
                    $items.eq(idx + 1).addClass('suggestion-item-active');
                } else if (idx === -1 && $items.length > 0) {
                    $items.first().addClass('suggestion-item-active');
                }
            } else if (e.key === "ArrowUp") {
                e.preventDefault();
                if (idx > 0) {
                    $current.removeClass('suggestion-item-active');
                    $items.eq(idx - 1).addClass('suggestion-item-active');
                }
            } else if (e.key === "Enter") {
                e.preventDefault();
                if ($current.length) {
                    selectMenuSuggestion($current);
                }
            } else if (e.key === "Escape") {
                $suggestionContainer.hide();
            }
        });

        function selectMenuSuggestion($item) {
            var id = $item.data('id');
            var name = $item.data('name');

            if ($activeInput) {
                $activeInput.attr("data-id", id);
                $activeInput.val(name);
            }

            $('.suggestions-container').hide();
        }
    });
</script>

