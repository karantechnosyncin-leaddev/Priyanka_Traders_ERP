@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Technosync - Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #FF3301;
            --accent-color: #f39c12;
            --light-color: #ecf0f1;
        }

        body {
            background-color: #f5f5f5;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-image: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);
            margin: 0;
            padding: 0;
        }

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

        .login-box {
            background: white;
            padding: 2.5rem;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 400px;
            z-index: 10;
            position: relative;
            border-top: 5px solid var(--secondary-color);
        }



        .brand-header {
            text-align: center;
            margin-bottom: 2rem;
        }

            .brand-header .logo {
/*                background-color: var(--secondary-color);
                color: white;
                width: 60px;
                height: 60px;
                border-radius: 50%;*/
                display: flex;
                align-items: center;
                justify-content: center;
                margin: 0 auto 1rem;
/*                font-size: 1.8rem;*/
/*                box-shadow: 0 4px 8px rgba(231, 76, 60, 0.3);*/
            }

            .brand-header h1 {
                color: var(--primary-color);
                font-weight: 700;
                margin: 0;
            }

        h2 {
        color:#656565;
        }
                .brand-header h2 span {
                    color: var(--secondary-color);
                }

            .brand-header p {
                color: #7f8c8d;
                font-size: 0.9rem;
                margin-top: 0.5rem;
            }

        .input-group {
            display: flex;
            margin-bottom: 1rem;
        }

        .input-group-prepend {
            display: flex;
        }

        .input-group-text {
            background-color: var(--light-color);
            border: 1px solid #ced4da;
            border-right: none;
            border-radius: 4px 0 0 4px;
            padding: 0.375rem 0.75rem;
            color: var(--primary-color);
            display: flex;
            align-items: center;
        }

        .form-control {
            flex: 1;
            padding: 0.375rem 0.75rem;
            border: 1px solid #ced4da;
            border-left: none;
            border-radius: 0 4px 4px 0;
            height: calc(1.5em + 0.75rem + 2px);
        }

            .form-control:focus {
                outline: none;
                box-shadow: none;
                border-color: #ced4da;
            }

        .input-group-append {
            display: flex;
        }

        .btn-outline-secondary {
            border: 1px solid #ced4da;
            border-left: none;
            border-radius: 0 4px 4px 0;
            background-color: white;
            color: #6c757d;
        }

        .login-btn {
            background-color: var(--secondary-color);
            border: none;
            padding: 0.75rem;
            font-weight: 600;
            transition: all 0.3s;
            width: 100%;
            color: white;
            border-radius: 4px;
            cursor: pointer;
        }

            .login-btn:hover {
                background-color: #c0392b;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(231, 76, 60, 0.4);
            }

        .remember-me {
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .checkbox {
            display: flex;
            align-items: center;
        }

            .checkbox input {
                margin-right: 0.5rem;
            }

        .links {
            display: flex;
            justify-content: space-between;
            font-size: 0.85rem;
            margin-top: 1rem;
        }

            .links a {
                color: #7f8c8d;
                text-decoration: none;
                transition: color 0.2s;
            }

                .links a:hover {
                    color: var(--secondary-color);
                    text-decoration: underline;
                }

        .shop-decoration {
            position: absolute;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .product-icon {
            position: absolute;
            color: rgba(44, 62, 80, 0.1);
            font-size: 5rem;
        }

            .product-icon:nth-child(1) {
                top: 10%;
                left: 5%;
            }

            .product-icon:nth-child(2) {
                top: 70%;
                left: 10%;
            }

            .product-icon:nth-child(3) {
                top: 30%;
                right: 15%;
            }

            .product-icon:nth-child(4) {
                bottom: 20%;
                right: 5%;
            }

            .product-icon:nth-child(5) {
                top: 15%;
                right: 25%;
            }

        #togglePassword {
            cursor: pointer;
            padding: 0.375rem 0.75rem;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        @@media (max-width: 576px) {
            .login-box {
                width: 90%;
                padding: 1.5rem;
            }

            .product-icon {
                font-size: 3rem;
            }

            .login-container {
                padding: 25px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-box shop-themed">
            <div class="brand-header">
                <div class="logo" style="width:260px; height:65px;">
                    <img src="~/img/Techno Logo/TS - Logo.png"  style="width: 100%; height: 100%"/>
                    @*<i class="fas fa-cash-register"></i>*@
                </div>
                    <h2><small style="color: #656565; font-size: 14px">Powered by </small><span>Retail</span>Sync</h2>
                @*<p>WHERE IDEAS MEET <span style="color:#FF3301">INNOVATION</span></p>*@
            </div>

            <form id="account" method="post" class="login-form  " action="@Url.Action("Index","Home")">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                        </div>
                        <input type="text" class="form-control" name="user" placeholder="Username" required />
                    </div>
                   
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        </div>
                        <input type="password" class="form-control" name="password" placeholder="Password" id="passwordInput" required />
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                <i class="fas fa-eye" id="eyeIcon"></i>
                            </button>
                        </div>
                    </div>
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="text-danger" id="userIdError" style="text-align:center; margin-bottom:1rem;">
                        @ViewBag.Error
                    </div>
                }
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block login-btn">
                        <i class="fas fa-sign-in-alt"></i> Login to Dashboard
                    </button>
                </div>
            </form>
        </div>

        <div class="shop-decoration">
            <div class="product-icon"><i class="fas fa-box-open"></i></div>
            <div class="product-icon"><i class="fas fa-tags"></i></div>
            <div class="product-icon"><i class="fas fa-shopping-cart"></i></div>
            <div class="product-icon"><i class="fas fa-barcode"></i></div>
            <div class="product-icon"><i class="fas fa-warehouse"></i></div>
        </div>
    </div>
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Password toggle functionality
            document.getElementById('togglePassword').addEventListener('click', function() {
                const passwordInput = document.getElementById('passwordInput');
                const eyeIcon = document.getElementById('eyeIcon');

                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    eyeIcon.classList.remove('fa-eye');
                    eyeIcon.classList.add('fa-eye-slash');
                } else {
                    passwordInput.type = 'password';
                    eyeIcon.classList.remove('fa-eye-slash');
                    eyeIcon.classList.add('fa-eye');
                }
            });

            // Basic form validation
            const form = document.getElementById('account');
            form.addEventListener('submit', function(event) {
                let isValid = true;
                const userId = form.querySelector('input[name="userId"]');
                const password = form.querySelector('input[name="password"]');
                const userIdError = document.getElementById('userIdError');
                const passwordError = document.getElementById('passwordError');

                // Clear previous errors
                userIdError.textContent = '';
                passwordError.textContent = '';

                if (!userId.value.trim()) {
                    userIdError.textContent = 'User ID is required';
                    isValid = false;
                }

                if (!password.value.trim()) {
                    passwordError.textContent = 'Password is required';
                    isValid = false;
                }

                if (!isValid) {
                    event.preventDefault();
                }
            });
        });
    </script>
</body>
</html>